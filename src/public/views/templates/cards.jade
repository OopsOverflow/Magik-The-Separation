//- Card Display Templates
mixin deck_builder_card_template()
  script#tpl_card(type=TEMPLATE_MIME)
    img.card-min-deckbuilder(
      id="{{id_prefix}}_{{number}}",
      alt="{{multiverseid}} -- {{name}} -- {{set}}",
      index="{{number}}",
      src="{{src}}",
      multiverseid="{{multiverseid}}"
    )

mixin search_card_template()
  script#tpl_search_card(type=TEMPLATE_MIME)
    img.card-min-deckbuilder.card-search(index="{{number}}", src="{{src}}")

mixin playground_card_template()
  script#tpl_card(type=TEMPLATE_MIME)
    div(id="{{id_prefix}}_{{number}}", side="{{side}}", number="{{number}}", class="{{side}} card-min draggable in-hand flipped {{type}}")
      img(src="/images/card-back.jpeg", class="back-side {{side}}")
      img(src="{{src}}", class="front-side {{side}}")

mixin dummy_card_template()
  script#tpl_dummy_card(type=TEMPLATE_MIME)
    div(class="card-min card-dummy {{side}}")
      img(index="{{number}}", src="/images/card-back.jpeg", class="front-side {{side}}" style="margin-top: 0px;")
      